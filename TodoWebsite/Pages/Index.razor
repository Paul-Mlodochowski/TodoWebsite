          </div>
        </div>
        <p class="mb-1 w-75 text-break">@TodoItem.Description</p>
       <div class="d-flex w-100 justify-content-between">

        <small class="tags-color">
            @foreach(var tag in TodoItem.Tags){
                    @tag.TagValue
            }
         </small>
